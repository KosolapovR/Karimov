{% extends "base.html.twig" %}
{% block body %}
    <main class='row no-gutters wrapper'>
            <section class="catalog col">
               <div class="catalog-container">
                   <h4>Фото-каталог судовых запчастей</h4>
                <ul class="category_list row no-gutters dflex">
                    <li class="catalog_list__item col-sm-4"><a href="">Пружины</a></li>
                    <li class="catalog_list__item col-sm-4"><a href="">Двигатели</a></li>
                    <li class="catalog_list__item col-sm-4"><a href="">Трансмиссии</a></li>
                    <li class="catalog_list__item col-sm-4"><a href="">Втулки</a></li>
                    <li class="catalog_list__item col-sm-4"><a href="">Подшипники</a></li>
                    <li class="catalog_list__item col-sm-4"><a href="">Валы</a></li>
                    <li class="catalog_list__item col-sm-4"><a href="">Аккумуляторы</a></li>
                    <li class="catalog_list__item col-sm-4"><a href="">Разное</a></li>
                </ul>
                 <ul class="product__list row dflex justify-content-between">
                   {% for i in 1..12 %}
                    <li class="product__item col">
                      <div class="product__item__row d-flex align-items-end flex-column">
                          <div class="product__item__col">
                              <a href="{{ path('product') }}" class="product__item__link">
                           <img src="{{ asset('images/photo3.jpg') }}" alt="product" class="product__item__photo">
                       </a>  
                        </div>
                         <div class="product__item__col mt-auto">
                          <div class="product__item__title"><a href="{{ path('product') }}">Запчасть</a></div>
                          <div class="product__item__published">14.02.2019</div>
                          <div class="product__item__description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni aperiam qui, velit vel praesentium, adipisci voluptates quia ad aut libero.</div>
                        <div class="product__item__price">1 000 &#8381;</div>
                         </div>     
                      </div>
                      <a href="{{ path('product') }}"  class="product__item__hidden-layer"></a>
                    </li>
                   {% endfor %}
                </ul>     
               </div>    
            </section>

        </main>
{% endblock %}